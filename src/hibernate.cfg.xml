<?xml version='1.0' encoding='UTF-8'?>  

  <!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
<property name="hibernate.hbm2ddl.auto">update</property>  
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sda</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password">admin</property>

<property name="show_sql">true</property>
<mapping class="application.Equipment" />
<mapping class="application.Department" />
<mapping class="application.Employee" />
<mapping class="application.EquipmentDescription" />
<mapping class="application.Supplier" />
<mapping class="application.Product" />
<mapping class="application.IssuanceRecord" />
<mapping class="application.InventoryClerk" />
<mapping class="application.Account" />
<mapping class="application.AccountApproval" />
<mapping class="application.EquipmentDelivery" />
<mapping class="application.Requisition" />
<mapping class="application.RequisitionApproval" />


      

</session-factory>
</hibernate-configuration>



